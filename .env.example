# ==============================================================================
# CONFIGURACIÓN DEL SITIO
# ==============================================================================

# Nombre de la compañía (usado en metadata y footer)
COMPANY_NAME="Juan Becerra"

# Nombre del sitio (usado en el título de las páginas)
SITE_NAME="Juan Becerra - Marroquinería de Lujo"

# URL completa del sitio en producción (sin trailing slash)
SITE_URL="https://www.juanbecerra.co"

# ==============================================================================
# SHOPIFY CONFIGURACIÓN (REQUERIDO)
# ==============================================================================

# Token de acceso del Storefront API de Shopify
# Obtenerlo en: Shopify Admin > Settings > Apps and sales channels > Develop apps
SHOPIFY_STOREFRONT_ACCESS_TOKEN="your_storefront_access_token_here"

# Dominio de tu tienda Shopify (formato: tu-tienda.myshopify.com)
SHOPIFY_STORE_DOMAIN="your-store.myshopify.com"

# Secret para validar webhooks de revalidación desde Shopify
# Genera uno seguro con: openssl rand -base64 32
SHOPIFY_REVALIDATION_SECRET="your_random_secret_here"

# ==============================================================================
# VERCEL CONFIGURACIÓN (AUTOMÁTICO EN VERCEL)
# ==============================================================================

# URL de Vercel (se configura automáticamente en Vercel)
# NEXT_PUBLIC_VERCEL_URL="your-project.vercel.app"

# Entorno de Vercel (production, preview, development)
# VERCEL_ENV="production"

# URL base de Vercel (incluye protocolo)
# VERCEL_URL="your-project.vercel.app"

# ==============================================================================
# GOOGLE TAG MANAGER (OPCIONAL)
# ==============================================================================

# ID de Google Tag Manager para analytics
# Formato: GTM-XXXXXXX
# NEXT_PUBLIC_GTM_ID="GTM-WKH2FLX6"

# ==============================================================================
# N8N CHATBOT (OPCIONAL)
# ==============================================================================

# URL del webhook de N8N para el chatbot
# N8N_CHAT_WEBHOOK_URL="https://n8n.neuralflow.space/webhook/chat"

# ==============================================================================
# CONFIGURACIÓN DE DESARROLLO
# ==============================================================================

# Entorno de Node.js (no modificar manualmente)
# NODE_ENV="development"
